<h1>My books</h1>

<%= link_to 'New Book', new_book_path %>
 <ul id="feed">
<% @books.each do |book| %>
 
    <li>
         <%= link_to(image_tag(book.picture, :class => "book_img"),  book) %>
         <p><%= book.get_availability  %></p>
	 <%= if(!book.borrowed)
	        link_to 'Borrow', book, method: :put, action: :borrow
	     else
	        link_to 'Unborrow',
	        book, method: :put, :action => :unborrow
	     end
	 %>
	 <%= link_to 'Edit', edit_book_path(book) %>
         <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  
<% end %>
</ul>
<br />
